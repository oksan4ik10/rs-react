{
  "name": "components",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "npx eslint src",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "npx prettier src --check",
    "prettier:fix": "npm run prettier -- --write",
    "format": "npm run prettier:fix && npm run lint:fix",
    "test": "vitest --coverage",
    "test:cypress": "start-server-and-test start http://localhost:5173/ 'npx cypress run' && npx nyc report --reporter=text-summary",
    "cypress": "cypress open --e2e",
    "nyc": "npx nyc report --reporter=text-summary",
    "deploy": "npm run build && npx gh-pages -d dist -e forms",
    "build:test": "conc \"npm:build:*\"",
    "start:node": "ts-node src/server/server.ts",
    "build:client": "vite build --outDir dist/client",
    "build:server": "vite build --outDir dist/server --ssr src/server/components/ServerApp.tsx",
    "start": "set \"NODE_ENV=production\" && npm run start:node"
  },
  "dependencies": {
    "@cypress/react18": "^2.0.0",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@reduxjs/toolkit": "^1.9.3",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/user-event": "^14.4.3",
    "concurrently": "^8.0.1",
    "cross-env": "^7.0.3",
    "cross-fetch": "^3.1.5",
    "cypress": "^12.11.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-cypress": "^2.13.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "express": "^4.18.2",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jsdom": "^21.1.1",
    "lint-staged": "^13.2.0",
    "msw": "^1.2.1",
    "nodemon": "^2.0.22",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.43.8",
    "react-redux": "^8.0.5",
    "react-router-dom": "^6.9.0",
    "rimraf": "^5.0.0",
    "serve-static": "^1.15.0",
    "start-server-and-test": "^2.0.0",
    "ts-node": "^10.9.1",
    "vite-plugin-checker": "^0.5.6",
    "vitest": "^0.29.3",
    "whatwg-fetch": "^3.6.2"
  },
  "devDependencies": {
    "@cypress/code-coverage": "^3.10.4",
    "@testing-library/react": "^14.0.0",
    "@types/cypress__code-coverage": "^3.10.0",
    "@types/express": "^4.17.17",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "@vitejs/plugin-react": "^3.1.0",
    "@vitest/coverage-c8": "^0.29.3",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "2.8.4",
    "typescript": "^4.9.5",
    "vite": "^4.3.1",
    "vite-plugin-istanbul": "^4.0.1"
  }
}
